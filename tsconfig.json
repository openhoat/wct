{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./types",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["./main/*"]
    },
    "rootDirs": ["main"],
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020",
    "useDefineForClassFields": false
  }
}
